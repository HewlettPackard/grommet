{
  "name": "grommet",
  "version": "2.0.0-alpha.13",
  "main": "index.js",
  "module": "es6/index.js",
  "jsnext:main": "es6/index.js",
  "description": "focus on the essential experience",
  "authors": [
    "Alan Souza",
    "Bryan Jacquot",
    "Chris Carlozzi",
    "Eric Soderberg"
  ],
  "homepage": "http://grommet.io",
  "bugs": "https://github.com/grommet/grommet/issues",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/grommet/grommet.git"
  },
  "engine-strict": true,
  "engines": {
    "node": ">= 4.4.0"
  },
  "scripts": {
    "postinstall": "node ./tools/warn-alpha",
    "generate-readme": "babel-node ./tools/generate-readme",
    "build": "webpack --mode production && babel ./src/js/ --ignore '__tests__' --out-dir ./dist && cross-env BABEL_ENV=es6 babel ./src/js/ --ignore '__tests__' --out-dir ./dist/es6",
    "release-stable": "babel-node ./tools/release-stable",
    "lint": "eslint src",
    "test": "jest",
    "test-update": "jest --updateSnapshot",
    "test-watch": "jest --watchAll",
    "pack": "babel-node ./tools/pack"
  },
  "peerDependencies": {
    "react": ">= 15.3.0 < 16 || 16.x",
    "react-dom": ">= 15.3.0 < 16 || 16.x",
    "styled-components": ">= 2.1.1"
  },
  "dependencies": {
    "babel-plugin-grommet": "^0.5.1",
    "grommet-icons": "^0.16.0",
    "markdown-to-jsx": "^6.5.2",
    "node-emoji": "^1.8.1",
    "polished": "^1.3.0",
    "prop-types": "^15.5.10",
    "react-desc": "^3.2.0",
    "recompose": "^0.26.0"
  },
  "devDependencies": {
    "babel-cli": "^6.22.2",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.1",
    "babel-plugin-styled-components": "^1.1.7",
    "babel-preset-env": "^1.6.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-1": "^6.24.1",
    "copy-webpack-plugin": "^4.0.1",
    "cross-env": "^5.0.1",
    "css": "^2.2.1",
    "del": "^3.0.0",
    "enzyme": "^3.0.0",
    "enzyme-adapter-react-16": "^1.1.0",
    "eslint": "^4.3.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-babel": "^4.1.1",
    "eslint-plugin-class-property": "^1.0.6",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.1.0",
    "fs-extra": "^5.0.0",
    "grommet-cli": "5.1.2",
    "jest": "^22.4.2",
    "jest-cli": "^23.0.0-alpha.0",
    "jest-styled-components": "^5.0.0",
    "pre-commit": "^1.2.2",
    "react": "^16.0.0",
    "react-dev-utils": "^5.0.0",
    "react-dom": "^16.0.0",
    "react-test-renderer": "^16.1.0",
    "regenerator-runtime": "^0.11.1",
    "require-reload": "^0.2.2",
    "simple-git": "^1.74.1",
    "styled-components": "^3.2.3",
    "tarball-extract": "^0.0.6",
    "webpack": "^4.2.0",
    "webpack-cli": "^2.0.12"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ],
    "collectCoverageFrom": [
      "src/js/components/**/*.{js}",
      "src/js/theme/**/*.{js}"
    ],
    "modulePathIgnorePatterns": [
      "<rootDir>/dist/"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>[/\\\\](dist|templates|node_modules)[/\\\\]"
    ]
  },
  "pre-commit": [
    "lint",
    "test"
  ]
}
